@model App_comunicacao_escolar.Models.Agenda

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar agenda</h1>

<h3>Tem certeza que deseja deletar esta agenda?</h3>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Turma)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Turma == null)
            {
                <text>Todas as turmas</text>            
            }
            else
            {
                @Html.DisplayFor(model => model.Turma!.NomeComCodigoEntreParenteses)                
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
