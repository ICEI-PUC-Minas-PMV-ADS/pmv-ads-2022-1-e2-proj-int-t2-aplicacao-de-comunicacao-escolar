@model App_comunicacao_escolar.Models.Aluno

@{
    ViewData["Title"] = "Delete";
    string DataDeNascimento = Model.RemoverHorasDeDateTime(Model.DataDeNascimento);
}

<h1>Deletar aluno</h1>

<h3>Tem certeza que deseja deletar este aluno?</h3>

<div>
    <h4>@Html.DisplayFor(model => model.NomeAlunoComCodigoEntreParenteses)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoDoAluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoDoAluno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeNascimento)
        </dt>
        <dd class = "col-sm-10">
            @DataDeNascimento
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Responsaveis)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Responsaveis!= null) {
                foreach (var responsavel in Model.Responsaveis) {
                    if (responsavel.Usuario != null) {
                        <span>
                            @Html.DisplayFor(modelProfessor => responsavel.Usuario.NomeDisplayLista); 
                        </span>
                    }
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Turma)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Turma != null) {
                <text>@Html.DisplayFor(model => model.Turma!.NomeComCodigoEntreParenteses)</text>
            }
            else 
            {
                 <text>Nenhuma</text>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
