@model App_comunicacao_escolar.Models.Aluno

@{
    ViewData["Title"] = "Details";
    string DataDeNascimento = Model.RemoverHorasDeDateTime(Model.DataDeNascimento);
}

<h1>Details</h1>

<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SobreNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SobreNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoDoAluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoDoAluno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeNascimento)
        </dt>
        <dd class = "col-sm-10">
            @DataDeNascimento
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Turma)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Turma != null) {
                <text>@Html.DisplayFor(model => model.Turma!.NomeComCodigoEntreParenteses)</text>
            }
            else 
            {
                 <text>Nenhuma</text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
