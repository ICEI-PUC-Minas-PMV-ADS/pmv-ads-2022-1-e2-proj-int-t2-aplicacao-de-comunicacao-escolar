@model App_comunicacao_escolar.Models.AutorizacaoEvento

@{
    ViewData["Title"] = "Details";
    ViewData["Autorizado"] = "";

    if (Model.Autorizado != null)
    {
        if(Model.Autorizado == true)
        {
            ViewData["Autorizado"] = "Sim";
        }
        else
        {
            ViewData["Autorizado"] = "Não";
        }
    }
}

<h1>Autorizar participação do aluno</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Evento.Nome)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aluno.NomeAlunoComCodigoEntreParenteses)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evento.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evento.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evento.Descricao)
        </dd>
        @if (Model.Autorizado != null) {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Autorizado)
            </dt>
            <dd class = "col-sm-10">
                @ViewData["Autorizado"]
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.AssinadoPor)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.AssinadoPor)
            </dd>
        }
    </dl>
    @if (Model.Autorizado == null) {
        <h5>Autorizar participação no evento?</h5>
        <div class="d-flex">
            <form asp-action="Visualizar">
                <div class="form-group">
                    <div hidden>
                        @Html.CheckBox("Autorizar", true)
                    </div>
                    <input type="submit" value="Sim" class="btn btn-success"/>
                </div>
            </form>
            <form asp-action="Visualizar">
                <div class="form-group">
                    <div hidden>
                        @Html.CheckBox("Autorizar", false)
                    </div>
                    <input type="submit" value="Não" class="btn btn-danger mx-2"/>
                </div>
            </form>
        </div>
   }
</div>
<div class="my-2">
    <a asp-action="Index" asp-route-secao=@ViewData["TituloDaSecao"]>Voltar</a>
</div>
