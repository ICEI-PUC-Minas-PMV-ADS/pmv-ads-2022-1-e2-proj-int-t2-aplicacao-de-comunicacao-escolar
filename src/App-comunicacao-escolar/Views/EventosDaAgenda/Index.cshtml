@model IEnumerable<App_comunicacao_escolar.Models.EventoDaAgenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de eventos</h1>
<h4>@ViewData["AgendaNome"]</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InicioDoEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FimDoEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agenda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InicioDoEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FimDoEvento)
            </td>
            <td>
                @if (item.Agenda == null)
                {
                    <text>Todas as agendas</text>       
                }
                else {
                    @Html.DisplayFor(modelItem => item.Agenda.Nome)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Agendas" asp-action="Visualizar" asp-route-id=@ViewData["Id"]>Voltar</a>
</div>