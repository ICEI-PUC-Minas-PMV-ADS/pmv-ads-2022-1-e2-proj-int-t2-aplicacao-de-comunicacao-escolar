@model App_comunicacao_escolar.Models.PostagemLinhaDoTempo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PostagemLinhaDoTempo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assunto" class="control-label"></label>
                <input asp-for="Assunto" class="form-control" />
                <span asp-validation-for="Assunto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conteudo" class="control-label"></label>
                <input asp-for="Conteudo" class="form-control" />
                <span asp-validation-for="Conteudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoImagemPostada" class="control-label"></label>
                <input asp-for="CodigoImagemPostada" class="form-control" />
                <span asp-validation-for="CodigoImagemPostada" class="text-danger"></span>
            </div>
            <div class="form-group input-size-2x">
                <label for="arquivo" class="control-label">Anexar arquivos (Tamanho máximo: 25 MB):</label><br />
                <input onchange="checkError(arquivos, arquivosError)" type="file" class="m-1" id="arquivos" name="arquivo"/>
                <div class="text-danger" id="arquivosError">@ViewData["arquivosError"]</div>
            </div>
            <div class="form-group">
                <label asp-for="LinhaDoTempoId" class="control-label"></label>
                <select asp-for="LinhaDoTempoId" class ="form-control" asp-items="ViewBag.LinhaDoTempoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

