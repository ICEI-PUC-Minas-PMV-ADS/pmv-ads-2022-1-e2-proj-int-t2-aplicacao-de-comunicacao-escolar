@model App_comunicacao_escolar.Models.Turma

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disciplinas)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Disciplinas != null) {
                foreach (var disciplina in Model.Disciplinas)
                {
                    <text>@Html.DisplayFor(modelTurmaDisciplinas => disciplina.NomeComCodigoEntreParenteses); </text>
                }
                if (Model.Disciplinas.Count == 0)
                {
                    <text> Nenhuma </text>
                }
                else
                {
                    <a class="btn btn-link p-1" asp-action="GerenciarDisciplinas" asp-route-id="@Model?.Id">Ver quadro de horários</a>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alunos)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Alunos != null) {
                foreach (var aluno in Model.Alunos)
                {
                    <text>@Html.DisplayFor(modelTurmaAlunos => aluno.NomeAlunoComCodigoEntreParenteses); </text>
                }
                if (Model.Alunos.Count == 0)
                {
                    <text> Nenhum </text>
                }
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
