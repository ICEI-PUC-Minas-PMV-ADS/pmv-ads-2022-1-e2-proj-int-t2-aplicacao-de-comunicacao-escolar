@model App_comunicacao_escolar.Models.Turma

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar informações</h1>

<h4>@Html.DisplayFor(model => model.NomeComCodigoEntreParenteses)</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group input-size-standard">
                <label asp-for="Nome" class="control-label"></label> *
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group input-size-standard">
                <label asp-for="Codigo" class="control-label"></label> *
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <hr />
            <i>Campos marcados com "*" são obrigatórios</i>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/selecionar-disciplinas.js" asp-append-version="true"></script>
}
