@model App_comunicacao_escolar.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Mais informações</h1>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDeUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDeUsuario)
        </dd>
        @if (Model.Professor != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Professor.Formacao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Professor.Formacao)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Professor.Nivel)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Professor.Nivel)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefoneMovel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefoneMovel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefoneFixo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefoneFixo)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Logradouro),
            @Html.DisplayFor(model => model.Cidade),
            @Html.DisplayFor(model => model.Estado) -
            CEP: @Html.DisplayFor(model => model.Cep)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar informações</a> |
    <a asp-action="Index">Voltar</a>
</div>
