@model App_comunicacao_escolar.Models.Usuario

@{
    ViewData["Title"] = "Login";
}
<div class="login-box">
    <h1 class="h2 text-center">Fazer login</h1>

    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NomeDeUsuario" class="control-label"></label>
                    <input asp-for="NomeDeUsuario" class="form-control" />
                    <span asp-validation-for="NomeDeUsuario" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="text-danger text-center">@ViewBag.Message</div>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary mt-2 w-100" />
                </div>
            </form>
            
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
